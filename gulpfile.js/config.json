{
  "root": {
    "project": "./",
    "src": "./src/main/assets",
    "dest": "./public",
    "tests": "./src/test",
    "dist": "./dist"
  },

  "node_modules": {
    "src": "./node_modules"
  },

  "tasks": {
    "browserSync": {
      "server": {
        "baseDir": "public"
      }
    },

    "static": {
      "src": "static",
      "dest": "./"
    },

    "js": {
      "src": "js",
      "dest": "js",
      "extractSharedJs": true,
      "entries": {
        "bundle": ["./startup.js"]
      },
      "extensions": ["js"]
    },

    "bootstrapSass": {
      "src": "bootstrap-sass/assets",
      "dest": "_sass_assets/bootstrap-sass"
    },

    "css": {
      "src": "sass",
      "dest": "css",
      "autoprefixer": {
        "browsers": ["last 3 version"]
      },
      "sass": {
        "indentedSyntax": false
      },
      "extensions": ["sass", "scss", "css"]
    },

    "html": {
      "src": "htdocs",
      "dest": "./",
      "dataFile": "data/global.json",
      "htmlmin": {
        "collapseWhitespace": true
      },
      "extensions": ["html", "json"],
      "excludeFolders": ["layouts", "shared", "macros", "data"]
    },

    "images": {
      "src": "images",
      "dest": "images",
      "extensions": ["jpg", "png", "svg", "gif"]
    },

    "fonts": {
      "src": "fonts",
      "dest": "fonts",
      "extensions": ["woff2", "woff", "eot", "ttf", "svg"]
    },

    "iconFont": {
      "src": "icons",
      "dest": "fonts",
      "sassDest": "generated",
      "extensions": ["woff2", "woff", "eot", "ttf", "svg"]
    },

    "svgSprite": {
      "src": "sprites",
      "dest": "images",
      "extensions": ["svg"]
    },

    "publish": {
      "bucket": "test.aws.owtelse.com",
      "creds": {},
      "s3Prefix": "suited/"

    },
    
    "release": {
      "src": ".",
      "dest": ".",
      "versionFiles": ["package.json"],
      "promulgateVersionFiles": ["./src/main/assets/js/kontantes.js"],
      "excludeFolders": ["layouts", "shared", "macros", "data"]
    }
  }

}
